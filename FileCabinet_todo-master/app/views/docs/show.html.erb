<div class="doc-show">
	<h1 class="title"><%= @doc.title %></h1>
	<p><%= simple_format(@doc.content) %></p>
	<div class="buttons">
		<%= link_to 'Fix Doc',edit_doc_path(@doc),:class=>'btn' %>
		<%= link_to 'Trash It',doc_path(@doc), method: :delete, data: { confirm: "Are you Sure?" },:class=>'btn' %>
	</div>
</div>