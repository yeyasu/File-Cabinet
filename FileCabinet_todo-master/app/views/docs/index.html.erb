<div class="doc-dashboard">
	<div class="doc-wrapper">
		<% if @doc.blank? %>
			<% @docs.each do |doc| %>
				<%= link_to doc_path(doc) do %>
					<div class="doc">
						<h2 class="title"><%= doc.title %></h2>
						<p class="content"><%= truncate(doc.content,length:50)%></p>
						<p class="data"><%= time_ago_in_words(doc.created_at)%></p>
					</div>
				<% end %>
			<% end %>
		<% else %>
			<h2>Create Doc!</h2>
			<p>Start Creating Documents and Oraganize Your Life</p>
			<button><%= link_to "Create Doc", new_doc_path %></button>
		<%end%>
	</div>
</div>

